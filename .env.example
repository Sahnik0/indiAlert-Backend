# SAMPLE Environment Variables for Satellite Monitoring System
# Copy this file to .env and fill in your actual values
# DO NOT COMMIT .env TO VERSION CONTROL

# Google Earth Engine Configuration
PROJECT_ID=your-gee-project-id

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# System Configuration
CURRENT_USER=YourUsername

# Email Settings
EMAIL_COOLDOWN=5
MONITORING_INTERVAL=300

# Detection Thresholds (adjust as needed)
NDVI_CHANGE_THRESHOLD=0.15
MNDWI_CHANGE_THRESHOLD=0.12
NDBI_CHANGE_THRESHOLD=0.10
MIN_AREA_PIXELS=50
CLOUD_COVER_LIMIT=25
CONFIDENCE_THRESHOLD=0.3
